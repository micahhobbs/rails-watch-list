<div class="container pt-4">
  <div class="d-flex justify-content-between py-4">
    <h1 class="mb-0">All lists</h1>
    <%= link_to "Create new list", new_list_path, class: 'btn btn-gradient'%>
  </div>
  <div class="cards">
    <% @lists.each do |list| %>
        <div class="card-category">
          <%= link_to list.name, list_path(list),  style: 'text-decoration:none; color:gray' %>
        </div>
    <% end %>
  </div>
</div>
