<div class="container pt-4">
  <div class="d-flex justify-content-between py-4">
    <h1 class="mb-0">All lists</h1>
    <%= link_to "Create new list", new_list_path, class: 'btn btn-gradient'%>
  </div>
  <div class="cards py-4">
    <% @lists.each do |list| %>
      <%= link_to list_path(list), style: 'text-decoration:none' do %>
        <div class="card-category" style="background-image:
                                          linear-gradient(rgba(0,0,0,0.3),
                                          rgba(0,0,0,0.3)),
                                          url('<%= cl_image_path list.photo.key,
                                          height: 300, crop: :fill %>')">
          <p style="color:white"><%= list.name %></p>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
